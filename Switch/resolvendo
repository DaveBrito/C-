#include <iostream>
#include <string>
#include <math.h>
using namespace std;

int main() {
    int idades[] = {25, 20, 30, 18, 22};
    int i = 0;
    string nomes[] = {"João", "Maria", "Pedro", "Ana", "Lucas"};
    
    cout << idades[5];
    cout <<nomes[5];
    int maior_idade = idades[0];
    int menor_idade = idades[0];
    int soma_idades = idades[i];
   
    for (idades[i]; i < 5; i++) {
        if (idades[i] > maior_idade) {
            maior_idade = idades[i];
        }
        if (idades[i] < menor_idade) {
            menor_idade = idades[i];
        }
        soma_idades += idades[i];
    }

    float media_idades = soma_idades / 5.0;
    int saldo_idades = soma_idades - (5 * media_idades);

    cout<<"Pessoa de maior idade: "<<nomes[maior_idade];
    cout<< "Pessoa de menor idade: "<<nomes[menor_idade];
    cout<< "Média das idades: "<<media_idades;
    cout<< "Saldo das idades: "<<saldo_idades;

    return 0;
}
